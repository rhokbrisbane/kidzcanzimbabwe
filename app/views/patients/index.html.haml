= render 'patients/header'

= form_tag patients_path, method: 'get' do |f|
  = search_field_tag :q, params[:q], autofocus: true, placeholder: 'Search'

- if @patients.any?
  %table
    %thead
      %tr
        %th Last Name
        %th First Name
        %th Actions


    - @patients.each do |patient|
      %tr
        %td= patient.lastname
        %td= patient.firstname
        %td
          = link_to 'show', patient_path(patient), class: 'button'
          = link_to 'edit', edit_patient_path(patient), class: 'button'
          = link_to 'Delete', patient, :method => :delete, :data => { :confirm => 'Are you sure?' }

- else
  %p There are no resources in this category.
